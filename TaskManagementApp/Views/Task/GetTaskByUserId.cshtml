@model List<TaskManagementApp.Models.DTO.UserTaskDto>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if (Model.Count > 0)
                {
                    <h1 class="text-white">Task Details of @Model[0].UserName </h1>
                }
                else{
                    <h1 class="text-white">Task Details</h1>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            @*<div class="col-6 text-end">
                <a class="btn btn-outline-primary" asp-action="Register" asp-controller="Auth"><i class="bi bi-plus-square"></i> Assigned New Task</a>

            </div>*@
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Updated Datetime
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Assigned By
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.LastUpdatedDate
                        </td>
                        <td>
                            @item.TaskStatus
                        </td>
                        <td>
                            @item.AssignedByName
                        </td>
                        <td>
                            @*	<a asp-action="EditUser" asp-route-userId="@item.UserId" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="DeleteUser" asp-route-userId="@item.UserId" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        </a>
                        <a asp-action="GetTaskByUserId" asp-controller="Task" asp-route-userId="@item.UserId" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        </a>*@
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>

</div>