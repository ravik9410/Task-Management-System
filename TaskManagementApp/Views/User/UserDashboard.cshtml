@model List<TaskManagementApp.Models.DTO.UserDto>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">User Dashboard</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-outline-primary" asp-action="Register" asp-controller="Auth"><i class="bi bi-plus-square"></i> Register New User</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						User Name
					</th>
					<th>
						Email
					</th>
					<th>
						Phone Number
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.Email
						</td>
						<td>
							@item.PhoneNumber
						</td>
						<td>
							<a asp-action="EditUser" asp-route-userId="@item.UserId" class="btn btn-warning">
								@*<i class="fas fa-edit"></i>*@ Edit
							</a>
							<a asp-action="DeleteUser" asp-route-userId="@item.UserId" class="btn btn-danger">
								@*<i class="bi bi-trash"></i>*@ Delete
							</a>
							<a asp-action="GetTaskByUserId" asp-controller="Task" asp-route-userId="@item.UserId" class="btn btn-success">
								@*<i class="bi bi-trash"></i>*@ Assigned Task
							</a>
						</td>
					</tr>
				}


			</tbody>
		</table>

	</div>

</div>